<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorBackground">@color/primary_color</item>
        <item name="colorBottomsheetText">@color/bottomsheet_text_white</item>
        <item name="android:colorBackground">@color/primary_color</item>
        <!-- Note to self, colorBackgroundFloating handles _floating_ items like CardViews -->
        <item name="android:colorBackgroundFloating">@color/primary_color_lighter</item>
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowBackground">@color/primary_color</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="AppThemeBlack" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/primary_color_black</item>
        <item name="colorPrimaryDark">@color/primary_color_black</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorBackground">@color/primary_color_black</item>
        <item name="colorBottomsheetText">@color/bottomsheet_text_white</item>
        <item name="android:colorBackground">@color/primary_color_black</item>
        <!-- Note to self, colorBackgroundFloating handles _floating_ items like CardViews -->
        <item name="android:colorBackgroundFloating">@color/primary_color</item>
        <item name="android:navigationBarColor">@color/primary_color_black</item>
        <item name="android:statusBarColor">@color/primary_color_black</item>
        <item name="android:windowBackground">@color/primary_color_black</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>
</resources>